rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Users can only access their own clothing item images
    match /clothing_items/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Users can only access their own generated outfit images
    match /generated_outfits/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Users can only access their own profile images
    match /profile_images/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}